<%- include('partials/headerAdmin.ejs') %>
<style type="text/css">

    table{
        margin-left: 100px;
    }
    .row-1{
        display: flex;
        flex-direction: row;
    }
    .input1{
        width: 70%;
    }
    .col-sm-8{
        margin-top: 10px;
    }
    .contact1-form-btn{
        margin: 50px 10px;
    }
</style>
    <div class="app-content" style="padding-top: 40px;">
        <% if(errorMessage) {%>
						<div  style="border: 1px solid red; padding: 30px; width: 30%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 16px; font-weight: bold; color:red; padding:auto; "><%= errorMessage %> </h5>
						</div>
					<% } else if(okMessage){%>
						<div  style="border: 1px solid #58D53B; padding: 30px; width: 30%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 16px; font-weight: bold; color:#58D53B; padding:auto; "><%= okMessage %> </h5>
						</div>
					<%}%>
                        
        <nav style="position: fixed;background-color: transparent;" class="navbar navbar-expand navbar-light bg-white">
            <button type="button" class="btn btn-sidebar" data-toggle="sidebar"><i class="icon-menu"></i></button>
        </nav>
        <nav aria-label="breadcrumb">
        </nav>
        <div class="container">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Program <b>Details</b></h2></div>
                        </div>
                    </div>
                    <form action="updateProgram/<%= program._id%>" method="post">
                    <table>
                        <div class="wrap-input1 validate-input" data-validate = "Course code is required">
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Code  </b></h6></div></label></td>
                            <td><input disabled class="input1" type="text" value="<%= program._id%>" name="pcode" placeholder="Course code" required="required>
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>

                         <div class="wrap-input1 validate-input" data-validate = "Course code is required">
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Name  </b></h6></div></label></td>
                            <td><input class="input1" type="text" value="<%= program.name%>" name="pname" placeholder="Course code" required="required>
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input" data-validate = "Course code is required">
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Duration(inYears)  </b></h6></div></label></td>
                            <td><input class="input1" type="text" value="<%= program.duration%>" name="pduration" placeholder="Course code" required="required>
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input" data-validate = "Course code is required">
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Active  </b></h6></div></label></td>
                            <td><input class="input1" type="text" value="<%= program.active%>"name="pactive" placeholder="Course code" required="required>
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input" data-validate = "Course code is required">
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>CreatedAt  </b></h6></div></label></td>
                            <td><input disabled class="input1" type="text" value="<%= program.created_at%>" name="" placeholder="Course code" required="required>
                                <span class="shadow-input1"></span></td>
                            </div>
                        </tr>
                    </table>
                    <div class="container-contact1-form-btn">
						<button type="submit" class="contact1-form-btn" >
							<span>
								Update
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
							</span>
                        </button>
                         <a class="contact1-form-btn" href="/getAddStudent/<%= program._id%>">
							<span>
								AddStudents
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
							</span>
                        </a>
                       <a class="contact1-form-btn" href="deleteProgram/<%= program._id%>">
							<span>
								Delete
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
							</span>
                        </a>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>