<%- include('partials/headerFaculty.ejs') %>

<div class="app-content" style="padding-top: 40px;">
	<nav style="position: fixed;background-color: transparent;" class="navbar navbar-expand navbar-light bg-white">
		<button type="button" class="btn btn-sidebar" data-toggle="sidebar"><i class="icon-menu"></i></button>
	</nav>
	<nav aria-label="breadcrumb"></nav>
<div align="center">
	<% if(errorMessage) {%>
						<div  style="border: 1px solid red; padding: 30px; width: 30%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 20px; margin-top:-12px; font-weight: bold; color:red; padding:auto; "><%= errorMessage %> </h5>
						</div>
					<% } else if(okMessage){%>
						<div  style="border: 1px solid #2e8cc2; padding: 30px; width: 30%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 20px; font-weight: bold; margin-top:-12px; color:#2e8cc2; padding:auto; "><%= okMessage %> </h5>
						</div>
	<%}%>
<form action="createClass" method="post" class="contact1-form validate-form">
				<span class="contact1-form-title">
					Create a Class
				</span>
				<input type="hidden" name="fid" value="<%= user.email %>">
				<div class="wrap-input1 validate-input" data-validate = "required">
					<!--<textarea class="input1" name="message" placeholder="Message"></textarea>-->
					<select class="input1" name="fprogram">
						<option>--Select Program --</option>
						<% for(let i=0; i < programs.length; i++) {  %>
							<option value="<%= programs[i]._id %>"><%= programs[i]._id %></option>
						<%}%>
					</select>
					<span class="shadow-input1"></span>
                </div>
                <div class="wrap-input1 validate-input" data-validate = "required">
					<!--<textarea class="input1" name="message" placeholder="Message"></textarea>-->
					<select class="input1" name="fcourse">
						<option>--Select Course --</option>
						<% for(let i=0; i < courses.length; i++) {  %>
							<option value="<%= courses[i]._id %>"><%= courses[i]._id %></option>
						<%}%>
					</select>
					<span class="shadow-input1"></span>
				</div>
				<div class="container-contact1-form-btn">
					<button type="submit" class="contact1-form-btn">
						<span>
							CREATE
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
					</button>
				</div>
			</form>
			</div>
</div></div></div>
