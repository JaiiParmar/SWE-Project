<%- include('partials/headerAdmin.ejs') %>

<div align="center">
	<span class="contact1-form-title">
						Add Program
					</span>

				<% if(errorMessage) {%>
						<div  style="border: 1px solid red; padding: 30px; width: 50%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 20px; margin-top:-12px; font-weight: bold; color:red; padding:auto; "><%= errorMessage %> </h5>
						</div>
					<% } else if(okMessage){%>
						<div  style="border: 1px solid #2e8cc2; padding: 30px; width: 50%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 20px; font-weight: bold; margin-top:-12px; color:#2e8cc2; padding:auto; "><%= okMessage %> </h5>
						</div>
					<%}%>

					<form class="contact1-form validate-form" align="left" action="addProgram" method="post">

						<div class="wrap-input1 `validate-input" data-validate = "Program Id is required">
						<input class="input1" type="text" required name="pid" placeholder="Program ID">
						<span class="shadow-input1"></span>
					</div>

					<div class="wrap-input1 validate-input"  data-validate = "Program Name is required">
						<input class="input1" type="text" required name="pname" placeholder="Program Name">
						<span class="shadow-input1"></span>
					</div>
					<div class="wrap-input1 validate-input" data-validate = "required: ex: 3">
						<input class="input1" type="text" required name="duration" placeholder="Duration in Years">
						<span class="shadow-input1"></span>
					</div>
					<tr><td colspan=2></td></tr>
					<tr>
					<td colspan=2>
					<div class="container-contact1-form-btn">
						<button type="submit" class="contact1-form-btn" onclick="addprogram">
							<span>
								ADD
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
							</span>
						</button>
					</div>
					</form>
				</div>
	</div></div></div>