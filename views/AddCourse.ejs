<%- include('partials/headerAdmin.ejs') %>
<div align="center">
<% if(errorMessage) {%>
						<div  style="border: 1px solid red; padding: 30px; width: 50%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 20px; margin-top:-12px; font-weight: bold; color:red; padding:auto; "><%= errorMessage %> </h5>
						</div>
					<% } else if(okMessage){%>
						<div  style="border: 1px solid #2e8cc2; padding: 30px; width: 50%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 20px; font-weight: bold; margin-top:-12px; color:#2e8cc2; padding:auto; "><%= okMessage %> </h5>
						</div>
					<%}%>

	<form class="contact1-form validate-form" align="left" action="addCourse" method="post">
					<span class="contact1-form-title">
						Add Course
					</span>

					<div class="wrap-input1 validate-input"  data-validate = "Course code is required">
						<input class="input1" type="text" name="ccode" required placeholder="Course code" >
						<span class="shadow-input1"></span>
					</div>

					<div class="wrap-input1 validate-input"  data-validate = "Course Name is required">
						<input class="input1" type="text" name="cname" required placeholder="Course Name" >
						<span class="shadow-input1"></span>
					</div>

						<div class="container-contact1-form-btn">
							<button class="contact1-form-btn" >
								<span>
									ADD
									<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
								</span>
							</button>
						</div>
				</form>
				</div>
	</div></div></div>