<%- include('partials/headerAdmin.ejs') %>
<div align="center">
	<% if(errorMessage) {%>
						<div  style="border: 1px solid red; padding: 30px; width: 30%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 16px; font-weight: bold; color:red; padding:auto; "><%= errorMessage %> </h5>
						</div>
					<% } else if(okMessage){%>
						<div  style="border: 1px solid #58D53B; padding: 30px; width: 30%; height: 60px; margin-bottom: 30px;" >
							<h5 style="font-size: 16px; font-weight: bold; color:#58D53B; padding:auto; "><%= okMessage %> </h5>
						</div>
					<%}%>

	<form class="contact1-form validate-form" align="left" action="addCourse" method="post">
					<span class="contact1-form-title">
						Add Course
					</span>

					<div class="wrap-input1 validate-input" data-validate = "Course code is required">
						<input class="input1" type="text" name="ccode" placeholder="Course code" required="required>
						<span class="shadow-input1"></span>
					</div>

					<div class="wrap-input1 validate-input" data-validate = "Course Name is required">
						<input class="input1" type="text" name="cname" placeholder="Course Name" required="required>
						<span class="shadow-input1"></span>
					</div>

						<div class="container-contact1-form-btn">
							<button class="contact1-form-btn" >
								<span>
									ADD
									<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
								</span>
							</button>
						</div>
				</form>
				</div>
	</div></div></div>